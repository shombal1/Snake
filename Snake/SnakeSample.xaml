<UserControl x:Class="Snake.SnakeSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Snake"
             mc:Ignorable="d" 
             d:DesignHeight="54"  d:DesignWidth="18">
    <Grid Name="grid" Loaded="grid_Loaded" >
        <Rectangle Name="Head" HorizontalAlignment="Left" Height="18"  Margin="0,0,0,0" Stroke="Green"  VerticalAlignment="Top" Width="18" Fill="Green"/>
        <Rectangle Name="body1" HorizontalAlignment="Left" Height="18" Fill="LightGreen"  Margin="0,18,0,0" Stroke="LightGreen" VerticalAlignment="Top" Width="18"/>
        <Rectangle Name="body2" HorizontalAlignment="Left" Height="18" Fill="LightGreen"  Margin="0,36,0,0" Stroke="LightGreen" VerticalAlignment="Top" Width="18"/>
    </Grid>
</UserControl>
